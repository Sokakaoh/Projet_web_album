{% extends "layout.html.twig" %}
{% block contenu %}
	<form method="post" action="{{ path('album.validFormDelete') }}">
		<div class="row">

			<fieldset>
				<legend>Confirmer la suppression de l'album suivant: </legend>
				<input name="id"  type="hidden" value="{{donnees.id}}" />
				<label>Nom : <h5>{{donnees.nom}}</h5> </label>
				<input type="hidden" id="_method" name="_method" value="delete" />

				<input type="submit" name="supprimerAlbum" value="Supprimer" />
			</fieldset>
		</div>
	</form>
{% endblock %}
